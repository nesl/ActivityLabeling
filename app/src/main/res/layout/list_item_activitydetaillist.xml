<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:weightSum="1">
        <TextView
            android:textSize="@dimen/font_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/start_time"
            android:layout_weight="0.4"/>

        <TextView
            android:id="@+id/startTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size"
            android:layout_weight="0.6"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:weightSum="1">
        <TextView

            android:textSize="@dimen/font_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/end_time"
            android:layout_weight="0.4"/>

        <TextView
            android:id="@+id/endTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size"
            android:layout_weight="0.6" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:weightSum="1">
        <TextView
            android:text="@string/duration"
            android:textSize="@dimen/font_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"/>
        <Chronometer
            android:id="@+id/durationChrom"
            android:textSize="@dimen/font_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:countDown="false"
            android:layout_weight="0.6"/>
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:weightSum="1">
    <TextView

        android:textSize="@dimen/font_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start_location"
        android:layout_weight="0.4"/>
    <TextView
        android:id="@+id/startLocTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size"
        android:layout_weight="0.6" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="2dp">
        <TextView

            android:textSize="@dimen/font_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/end_location"
            android:layout_weight="0.4"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size"
            android:layout_weight="0.6"
            android:id="@+id/endLocTV" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:weightSum="1">
        <TextView
            android:textSize="@dimen/font_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/micro_location"
            android:layout_weight="0.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size"
            android:layout_weight="0.6"
            android:id="@+id/ulocTV"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:weightSum="1">
        <TextView
            android:textSize="@dimen/font_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/activity_type"
            android:layout_weight="0.4"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size"
            android:layout_weight="0.6"
            android:id="@+id/typeTV"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView

            android:textSize="@dimen/font_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:layout_weight="0.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size"
            android:layout_weight="0.6"
            android:id="@+id/dscrpTV"/>
    </LinearLayout>


    <Button
        android:id="@+id/stopBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/stop"/>

</LinearLayout>
